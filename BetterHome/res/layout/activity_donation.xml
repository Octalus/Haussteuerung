<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/donate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="360dp"
            android:text="@string/donate_text"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.5" >

        <Button
            android:id="@+id/donate_button_xxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anchor"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/anchor"
            android:layout_toEndOf="@+id/anchor"
            android:background="@null"
            android:drawableLeft="@drawable/donate_blue"
            android:drawableStart="@drawable/donate_blue"
            android:drawablePadding="5dp"
            android:text="@string/donate_xxl" 
            android:textColor="@drawable/donate_text" />

        <Button
            android:id="@+id/donate_button_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anchor"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/anchor"
            android:layout_toStartOf="@+id/anchor"
            android:background="@null"
            android:drawableLeft="@drawable/donate_purple"
            android:drawableStart="@drawable/donate_purple"
            android:drawablePadding="5dp"
            android:text="@string/donate_xl" 
            android:textColor="@drawable/donate_text" />

        <Button
            android:id="@+id/donate_button_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anchor"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/donate_button_medium"
            android:layout_toEndOf="@+id/donate_button_medium"
            android:background="@null"
            android:drawableLeft="@drawable/donate_green"
            android:drawableStart="@drawable/donate_green"
            android:drawablePadding="5dp"
            android:text="@string/donate_large" 
            android:textColor="@drawable/donate_text" />

        <Button
            android:id="@+id/donate_button_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/anchor"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/donate_yellow"
            android:drawableStart="@drawable/donate_yellow"
            android:drawablePadding="5dp"
            android:text="@string/donate_medium"
            android:textColor="@drawable/donate_text" />

        <Button
            android:id="@+id/donate_button_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anchor"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/donate_button_medium"
            android:layout_toStartOf="@id/donate_button_medium"
            android:background="@null"
            android:drawableLeft="@drawable/donate_red"
            android:drawableStart="@drawable/donate_red"
            android:drawablePadding="5dp"
            android:text="@string/donate_small"
            android:textColor="@drawable/donate_text" />

        <View
            android:id="@+id/anchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>